
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/jquery.dataTables.css")" />
}

<!-- /section:basics/sidebar -->
<div class="main-content">
    <div class="main-content-inner">
        <!-- #section:basics/content.breadcrumbs -->
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
            </script>

            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">INICIO</a>
                </li>

                <li>
                    <a href="javascript:void(0)">ADMINISTRACI&Oacute;N</a>
                </li>
                <li class="active">REGISTRO</li>
                <li class="active">USUARIO</li>
            </ul><!-- /.breadcrumb -->
            <!-- /section:basics/content.searchbox -->
        </div>

        <!-- /section:basics/content.breadcrumbs -->
        <div class="page-content">
            <!-- #section:settings.box -->
            <!-- /section:settings.box -->
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="search-area well no-margin-bottom">
                        <form id="UsuarioSearchForm" role="form">
                            <div class="row">
                                <div class="col-md-7">

                                    <div class="input-group">

                                        <input type="text" id="UsuarioSearch" name="UsuarioSearch" placeholder="Usuario" maxlength="100" class="form-control" />
                                        <div class="input-group-btn">

                                        </div>
                                        <select id="RolIdSearch" name="RolIdSearch" class="form-control"></select>
                                        <div class="input-group-btn">
                                            <button type="button" id="btnSearchUsuario" class="btn btn-success btn-sm">
                                                <i class="ace-icon fa fa-search icon-on-right bigger-110 right"></i>Buscar
                                            </button>
                                        </div>
                                  
                                    </div>
                                  
                                </div>
                                <div class="clearfix">
                                    <div class="pull-right tableTools-container">
                                        <div class="dt-buttons btn-overlap btn-group">
                                            <a id="btnAgregarUsuario" data-toggle="tooltip" class="dt-button buttons-collection buttons-colvis btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="" title="Nuevo">
                                                <span><i class="fa fa-plus-circle bigger-110 blue"></i> </span>
                                            </a>

                                            <a id="editarUsuario" data-toggle="tooltip" class="dt-button buttons-copy buttons-html5 btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="" title="Editar">
                                                <span><i class="fa fa-pencil bigger-110 pink"> </i> </span>
                                            </a>
                                            <a id="eliminarUsuario" data-toggle="tooltip" class="dt-button buttons-csv buttons-html5 btn btn-white btn-primary btn-bold" tabindex="0" aria-controls="dynamic-table" data-original-title="" title="Eliminar">
                                                <span><i class="fa fa-trash-o bigger-110 orange"></i></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="space space-6"></div>
                    </div>
                <br />
                <div class="col-xs-12">
                    <div class="table-header">
                        Resultado "usuarios"
                    </div>
                    <div class="dataTables_wrapper form-inline no-footer">
                        <div class="table-responsive">
                            <table id="UsuarioDataTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="hidden">Id</th>
                                        <th class="hidden-120">Usuario</th>
                                        <th class="hidden-120">Nombre</th>
                                        <th class="hidden-992">Apellido</th>
                                        <th class="hidden-768">Correo</th>
                                        <th class="hidden-600">Rol</th>
                                        <th class="hidden-480">Estado</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    </div>
 
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
      

            <div id='NuevoUsuario' tabindex='-1' role='dialog' aria-hidden='true' class='modal fade' data-backdrop='static' style='z-index:100000;'>
                <div class='modal-dialog'>
                    <div class='modal-content'>
                        <div class='modal-header'>
                            <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class='modal-title'><span id='accionTitle'></span> Usuario</h4>
                        </div>
                        <div class='modal-body'>
                            <div class="row">
                                <div class="col-xs-12">
                                    <!-- PAGE CONTENT BEGINS -->
                                    <form class="form-horizontal" role="form" id="UsuarioForm">
                                        <div class="form-group"></div>
                                        <!-- #section:elements.form -->

                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="Usuario">Usuario </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <input type="text" id="Username" autocomplete="off" name="Username" placeholder="Usuario" maxlength="100" class="col-xs-12 col-sm-12" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="Nombre">Nombre </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <input type="text" id="Nombre" autocomplete="off" name="Nombre" placeholder="Nombre" maxlength="100" class="col-xs-12 col-sm-12" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="Apellido">Apellido </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <input type="text" id="Apellido" autocomplete="off" name="Apellido" placeholder="Apellido" maxlength="100" class="col-xs-12 col-sm-12" />
                                                </div>
                                            </div>
                                        </div>
                                       <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="Contrasena">Constraseña </label>
                                            <div class="col-xs-12 col-sm-9">
                                                    <span class="input-icon_ input-icon-right_">
                                                        <input type="password" id="Contrasena" autocomplete="off" name="Contrasena" placeholder="Contraseña" maxlength="100" class="form-control" />
                                                        <i class="ace-icon fa fa-eye bigger-110" id="mostarPass" style="cursor:pointer"></i>
                                                    </span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="Correo">Correo </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <input type="text" id="Correo" autocomplete="off" name="Correo" placeholder="Correo" maxlength="100" class="col-xs-12 col-sm-12" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="CargoId">Cargo </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <select id="CargoId" name="CargoId" class="col-xs-12 col-sm-12"></select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="RolId">Rol </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <select id="RolId" name="RolId" class="col-xs-12 col-sm-12"></select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="Estado">Estado </label>

                                            <div class="col-xs-12 col-sm-9">
                                                <div class="clearfix">
                                                    <select id="Estado" name="Estado" class="col-xs-12 col-sm-12">
                                                        <option value="1" selected>Activo</option>
                                                        <option value="2">Inactivo</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" name="UsuarioId" id="UsuarioId" value="0" />

                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class='modal-footer' style='margin-top: 0px; margin-bottom: 0px;'>
                            <button class='btn btn-danger' data-dismiss='modal'><i class='fa fa-remove'></i> Cancelar</button>
                            <button class='btn btn-success' id="btnGuardarUsuario"><i class='fa fa-floppy-o'></i> Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->

@section scripts{
    <!-- page specific plugin scripts -->
    <script src="@Url.Content("~/Content/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.dataTables.fnReloadAjax.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.inputlimiter.1.3.1.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Content/js/additional-methods.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.gritter.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.blockUI.js")"></script>

    <!-- inline scripts related to this page -->
    <script src="@Url.Content("~/Content/js/viewsJs/usuario.js")"></script>
    <!-- Ajax BlockUi scripts -->
    <script type="text/javascript">
        var pageBlocked = false;
        var handlerActivo = false;

        $(document).ready(function () {
            $.blockUI.defaults.baseZ = 100000;
            $.blockUI.defaults.overlayCSS.opacity = 0.4;
            $.blockUI.defaults.css.backgroundColor = "transparent";
            $.blockUI.defaults.css.border = '0px none';
            $.blockUI.defaults.fadeIn = 100,
            $.blockUI.defaults.fadeOut = 100,

            $(document).ajaxSend(function () {
                if (!pageBlocked) {
                    $.blockUI({
                        message: "Espere un momento por favor",
                        css: {
                            border: 'none',
                            padding: '15px',
                            backgroundColor: '#000',
                            '-webkit-border-radius': '10px',
                            '-moz-border-radius': '10px',
                            opacity: 1,
                            color: '#fff'
                        },
                        onBlock: function () {
                            pageBlocked = true;
                        }
                    });
                }
            }).ajaxStop(function () {
                jQuery.unblockUI();
                pageBlocked = false;
            });

        });
    </script>



}
