
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/jquery.dataTables.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/datepicker.css")" />

}
<!-- /section:basics/sidebar -->
<div class="main-content">
    <div class="main-content-inner">
        <!-- #section:basics/content.breadcrumbs -->
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            </script>

            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">INICIO</a>
                </li>
                <li>
                    <a href="javascript:void(0)">REPORTE</a>
                </li>
                <li class="active">VENTAS</li>
            </ul><!-- /.breadcrumb -->
            <!-- /section:basics/content.searchbox -->
        </div>

        <!-- /section:basics/content.breadcrumbs -->
        <div class="page-content">
            <!-- #section:settings.box -->
            <!-- /section:settings.box -->
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                   
                    <div class="table-responsive">
                        <table id="EnvioDataTable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="action-buttons">
                                            <a class="blue searchEnvio" href="javascript:void(0)"><i class="ace-icon fa fa-search bigger-130"></i></a>
                                            <a class="orange downloadEnvio" href="javascript:void(0)"><i class="ace-icon fa fa-cloud-download bigger-130"></i></a>
                                                <a class="blue verEnvio" href="javascript:void(0)"><i class="ace-icon fa fa-eye bigger-130"></i></a>
                                        </div>
                                    </th>
                                    <th>Id</th>
                                    <th>Año</th>
                                    <th>Mes </th>
                                    <th>Cliente</th>
                                    <th>Monto</th>
                                    <th>Cantidad</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <div id='BuscarReporte' tabindex='-1' role='dialog' aria-hidden='true' class='modal fade' data-backdrop='static' style='z-index:100000;'>
                        <div class='modal-dialog'>
                            <div class='modal-content'>
                                <div class='modal-header'>
                                    <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h4 class='modal-title'>Buscar Ventas</h4>
                                </div>
                                <div class='modal-body'>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <!-- PAGE CONTENT BEGINS -->
                                            <form class="form-horizontal" role="form" id="EnvioSearchForm">
                                                <div class="form-group"></div>
                                                <!-- #section:elements.form -->

                                                <div class="form-group">
                                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="NumeroDocumentoSearch">Cliente </label>

                                                    <div class="col-xs-12 col-sm-8">
                                                        <div class="clearfix">
                                                            <input type="text" id="ClienteSearch" name="ClienteSearch" placeholder="N&uacute;mero Documento" maxlength="12" class="col-xs-12 col-sm-12" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="CorreoElectronicoSearch">Año </label>

                                                    <div class="col-xs-12 col-sm-8">
                                                        <div class="clearfix">
                                                           
                                                                <select id="AnioSearch" name="AnioSearch" class="col-xs-12 col-sm-12">
                                                                    <option value="2017" selected>2017</option>
                                                                    <option value="2016">2016</option>
                                                                    <option value="2015">2015</option>
                                                                </select>
                                                            
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class='modal-footer' style='margin-top: 0px; margin-bottom: 0px;'>
                                    <button class='btn btn-primary' data-dismiss='modal'><i class='fa fa-remove'></i> Cancelar</button>
                                    <button class='btn btn-success' id="btnSearchEnvio"><i class='fa fa-search'></i> Buscar</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id='DetalleEnvio' tabindex='-1' role='dialog' aria-hidden='true' class='modal fade' data-backdrop='static' style='z-index:100000;'>
                        <div class='modal-dialog'>
                            <div class='modal-content'>
                                <div class='modal-header'>
                                    <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h4 class='modal-title'>Ver Grafica</h4>
                                </div>
                                <div class='modal-body'>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <!-- PAGE CONTENT BEGINS -->
                                            <form class="form-horizontal" role="form" id="DetalleEnvioForm">
                                                <div class="form-group"></div>
                                                <!-- #section:elements.form -->
                                           

                                                <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>

     

                                                <input type="hidden" name="EnvioId" id="EnvioId" value="0" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class='modal-footer' style='margin-top: 0px; margin-bottom: 0px;'>
                                    <button class='btn btn-success' data-dismiss='modal'><i class='fa fa-remove'></i> Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->

@section scripts{
    <!-- page specific plugin scripts -->
    <script src="@Url.Content("~/Content/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.dataTables.fnReloadAjax.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Content/js/additional-methods.js")"></script>



    <script src="@Url.Content("~/Content/js/date-time/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/Content/js/date-time/daterangepicker.js")"></script>
    <script src="@Url.Content("~/Content/js/date-time/locate/bootstrap-datepicker.es.js")"></script>

    <script src="@Url.Content("~/Content/js/jquery.gritter.js")"></script>
    <!-- inline scripts related to this page -->
<script src="@Url.Content("~/Scripts/highcharts.js")"></script>
<script src="@Url.Content("~/Scripts/highcharts_exporting.js")"></script>
    <script src="@Url.Content("~/Content/js/viewsJs/reporte.js")"></script>

    <!-- Ajax BlockUi scripts -->
    <script type="text/javascript">
	        var pageBlocked = false;
	        var handlerActivo = false;

	        $(document).ready(function () {
	            $.blockUI.defaults.baseZ = 100000;
	            $.blockUI.defaults.overlayCSS.opacity = 0.4;
	            $.blockUI.defaults.css.backgroundColor = "transparent";
	            $.blockUI.defaults.css.border = '0px none';
	            $.blockUI.defaults.fadeIn = 100,
	            $.blockUI.defaults.fadeOut = 100,

	            $(document).ajaxSend(function () {
	                if (!pageBlocked) {
	                    $.blockUI({
	                        message: "Espere un momento por favor",
	                        css: {
	                            border: 'none',
	                            padding: '15px',
	                            backgroundColor: '#000',
	                            '-webkit-border-radius': '10px',
	                            '-moz-border-radius': '10px',
	                            opacity: 1,
	                            color: '#fff'
	                        },
	                        onBlock: function () {
	                            pageBlocked = true;
	                        }
	                    });
	                }
	            }).ajaxStop(function () {
	                jQuery.unblockUI();
	                pageBlocked = false;
	            });

           });
    </script>
}




